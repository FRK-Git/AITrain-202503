<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Amount_can_not_great_than_order_Amount</fullName>
    <active>true</active>
    <errorConditionFormula>Order__r.TotalAmount &lt; Prepayment_Distribution_Amount__c</errorConditionFormula>
    <errorDisplayField>Prepayment_Distribution_Amount__c</errorDisplayField>
    <errorMessage>The prepayment distribution amount cannot be greater than the order amount.</errorMessage>
</ValidationRule>
